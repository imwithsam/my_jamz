<!DOCTYPE html>
<html>
<head>
  <title>MyJams</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |type, msg| %>
    <%= content_tag :div, msg, class: "flash_#{type}" %>
  <% end %>
  <% if current_user %>
    <p>You are logged in as <%= current_user.username %>. |
    <%= link_to "Logout", logout_path %></p>
  <% else %>
    <p><%= link_to "Sign In", login_path %></p>
  <% end %>
  <%= yield %>
  <% if session[:most_recent_song_title] %>
    <p><strong>Newest song:</strong> <%= session[:most_recent_song_title] %></p>
  <% end %>
</body>
</html>
